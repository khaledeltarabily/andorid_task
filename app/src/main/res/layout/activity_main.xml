<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.MainActivity">


    <Button
        android:id="@+id/addDepartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add Department"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/idBtnAddEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add Employee"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/idBtnViewEmployeesAndDepartments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="View Employees And Departments"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/showUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Show ALL Users (API)"
        android:textAllCaps="false" />

</LinearLayout>